---
import Button from "./ui/Button.astro";
import Logo from "./ui/Logo.astro";
import chevronDown from "../images/icon/chevron-down.svg";
import hamburger from "../images/icon/hamburger.svg";

const navItems = [
  { label: "Products", href: "#products" },
  { label: "Solutions", href: "#solutions" },
  { label: "Resources", href: "#resources" },
  { label: "Pricing", href: "#pricing" },
];
---

<div class="w-full">
  <div
    class="mx-auto flex max-w-[1440px] items-center justify-between px-[16px] py-[16px] md:px-[32px]"
  >
    <h1>
      <Logo />
    </h1>

    <div class="flex items-center gap-[24px]">
      <!-- ナビゲーション: 1280px以上で表示 -->
      <ul
        class="hidden items-start gap-[32px] pr-[32px] text-[18px] leading-[23px] font-medium tracking-[-0.02em] xl:flex"
      >
        {
          navItems.map((item) => (
            <li>
              <a href={item.href} class="group flex items-center gap-[10px]">
                <p class="group-hover:text-secondary transition-colors">
                  {item.label}
                </p>
                <div
                  class="group-hover:bg-secondary mt-[2px] h-[7px] w-[13px] bg-white mask-contain mask-no-repeat transition-colors"
                  style={`mask-image: url(${chevronDown.src})`}
                />
              </a>
            </li>
          ))
        }
      </ul>

      <!-- ボタン: 768px以上で表示 -->
      <div class="hidden items-center gap-[24px] md:flex">
        <button
          class="bg-secondary text-primary flex shrink-0 cursor-pointer items-center justify-center gap-[10px] rounded-[8px] px-[40px] py-[20px] transition-opacity hover:opacity-80"
        >
          Login
        </button>
        <Button class="p-[20px] text-[18px]">Try Whitepace free </Button>
      </div>

      <!-- ハンバーガーメニュー: 1280px以下で表示 -->
      <div class="xl:hidden">
        <img src={hamburger.src} alt="Menu" width="42" height="24" />
      </div>
    </div>
  </div>
</div>
