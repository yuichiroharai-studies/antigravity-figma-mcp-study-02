---
import quoteIcon from "../images/icon/quote.svg";
import client1 from "../images/client-1.png";
import client2 from "../images/client-2.png";
import client3 from "../images/client-3.png";

const testimonials = [
  {
    comment:
      "Whitepace is designed as a collaboration tool for businesses that is a full project management solution.",
    clientImage: client1.src,
    clientAlt: "Client 1",
    name: "Oberon Shaw, MCH",
    role: "Head of Talent Acquisition, North America",
  },
  {
    comment:
      "Whitepace is designed as a collaboration tool for businesses that is a full project management solution.",
    clientImage: client2.src,
    clientAlt: "Client 2",
    name: "Oberon Shaw, MCH",
    role: "Head of Talent Acquisition, North America",
  },
  {
    comment:
      "Whitepace is designed as a collaboration tool for businesses that is a full project management solution.",
    clientImage: client3.src,
    clientAlt: "Client 3",
    name: "Oberon Shaw, MCH",
    role: "Head of Talent Acquisition, North America",
  },
];
---

<div class="w-full bg-white text-[#212529]" data-name="Testimonial">
  <div
    class="mx-auto flex max-w-[1440px] flex-col items-center gap-[60px] px-[32px] py-[140px]"
  >
    <h3 class="text-[70px] font-bold tracking-[-0.02em]">
      What Our Clients Say
    </h3>
    <ul class="flex gap-[32px]" data-name="Content">
      {
        testimonials.map((testimonial) => (
          <li
            class="flex flex-col gap-[60px] rounded-[10px] bg-white px-[24px] py-[60px] shadow-[15px_10px_50px_0px_rgba(0,0,0,0.1)]"
            data-name="Client"
          >
            <div
              class="flex flex-col gap-[32px] border-[0px_0px_1px] border-solid border-[#212529] px-0 pt-0 pb-[40px]"
              data-name="Client-comment"
            >
              <div
                class="h-[62px] w-[86px] bg-[#043873]"
                style={`mask-image: url(${quoteIcon.src});`}
              />
              <p class="text-[18px] leading-[30px] tracking-[-0.02em]">
                {testimonial.comment}
              </p>
            </div>
            <div class="flex gap-[8%]" data-name="Client-profile">
              <div class="w-[95px] shrink-0">
                <img
                  class="w-full rounded-[9999px]"
                  src={testimonial.clientImage}
                  alt={testimonial.clientAlt}
                />
              </div>
              <div class="flex flex-col gap-[15px]" data-name="Client-info">
                <p class="text-[24px] leading-[36px] font-semibold tracking-[-0.02em]">
                  {testimonial.name}
                </p>
                <p class="text-[16px] leading-[20px] tracking-[-0.02em]">
                  {testimonial.role}
                </p>
              </div>
            </div>
          </li>
        ))
      }
    </ul>
    <div class="hidden h-[12px] w-[60px]" data-name="Slider">
      <img
        alt="Slider"
        class="block size-full max-w-none"
        src="https://placehold.co/60x12/808080/ffffff"
      />
    </div>
  </div>
</div>
